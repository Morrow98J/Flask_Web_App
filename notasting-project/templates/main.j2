    <!-- Source: https://www.w3schools.com/howto/howto_js_filter_table.asp -->
    <script>
      function tableSearch() {
        // Declare variables
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchParam");
        filter = input.value.toUpperCase();
        table = document.getElementById("pageTable");
        tr = table.getElementsByTagName("tr");
        

        // Loop through all table rows, and hide those who don't match the search query
        for (i = 1; i < tr.length; i++) {
          trtext = "n";
          td = tr[i].getElementsByTagName("td");
          if (td) {
            for (let index = 0; index < td.length; ++index) {
              txtValue = td[index].innerText;
              //console.log(txtValue)
              trtext = trtext + txtValue
            }
          }

          if (trtext.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
        }
      }
    </script>
